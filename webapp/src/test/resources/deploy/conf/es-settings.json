{
  "analysis": {
    "analyzer": {
      "my_custom_analyzer": {
        "type": "custom",
        "char_filter": [
          "emoticons"
        ],
        "tokenizer": "punctuation",
        "filter": [
          "lowercase",
          "english_stop"
        ]
      }
    },
    "tokenizer": {
      "punctuation": {
        "type": "pattern",
        "pattern": "[ .,!?]"
      }
    },
    "char_filter": {
      "emoticons": {
        "type": "mapping",
        "mappings": [
          ":) => _happy_",
          ":( => _sad_"
        ]
      }
    },
    "filter": {
      "english_stop": {
        "type": "stop",
        "stopwords": "_english_"
      }
    }
  }
}
