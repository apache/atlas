{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@img/*": ["img/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@services/*": ["services/*"],
      "@views/*": ["views/*"],
      "@hooks/*": ["hooks/*"],
      "@models/*": ["models/*"],
      "@contexts/*": ["contexts/*"],
      "@redux/*": ["redux/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "src/views/Statistics/d3.v3.min.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
