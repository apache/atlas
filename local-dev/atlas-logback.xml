<!-- Local development logback configuration (without OpenTelemetry) -->
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="consoleAudit" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.apache.atlas.web.filters.MDCFilter">
            <mdcKey>filter</mdcKey>
            <mdcValue>atlas-audit</mdcValue>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | filter: atlas-audit | X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="consoleAuthAudit" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.apache.atlas.web.filters.MDCFilter">
            <mdcKey>filter</mdcKey>
            <mdcValue>atlas-auth-audit</mdcValue>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | filter: atlas-auth-audit | X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="consoleAtlas" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.apache.atlas.web.filters.MDCFilter">
            <mdcKey>filter</mdcKey>
            <mdcValue>atlas-application</mdcValue>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | filter: atlas-application | X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="consolePerf" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.apache.atlas.web.filters.MDCFilter">
            <mdcKey>filter</mdcKey>
            <mdcValue>atlas-perf</mdcValue>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | filter: atlas-perf | X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="consoleRanger" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.apache.atlas.web.filters.MDCFilter">
            <mdcKey>filter</mdcKey>
            <mdcValue>atlas-ranger</mdcValue>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | filter: atlas-ranger | X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="consoleMetrics" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.apache.atlas.web.filters.MDCFilter">
            <mdcKey>filter</mdcKey>
            <mdcValue>atlas-metrics</mdcValue>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | filter: atlas-metrics | X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <appender name="consoleTasks" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="org.apache.atlas.web.filters.MDCFilter">
            <mdcKey>filter</mdcKey>
            <mdcValue>atlas-tasks</mdcValue>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Enhanced pattern with better readability -->
            <pattern>%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5p | [%t:%X{context-key}] | filter: atlas-tasks |  X-Atlan-Request-Id:[%X{X-Atlan-Request-Id}] | traceId:[%X{trace_id}] | %msg %n    at \(%C{1}.java:%L\)%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <logger name="org.apache.atlas.auth.perf" additivity="false" level="OFF">
        <appender-ref ref="console"/>
    </logger>

    <logger name="AUTH_AUDIT" additivity="false" level="info">
        <appender-ref ref="consoleAuthAudit"/>
    </logger>

    <!-- Authz loggers End -->

    <logger name="org.apache.atlas.perf" additivity="false" level="debug">
        <appender-ref ref="consolePerf"/>
    </logger>

    <logger name="org.apache.atlas" additivity="false" level="info">
        <appender-ref ref="consoleAtlas"/>
    </logger>

    <logger name="org.apache.ranger" additivity="false" level="warn">
        <appender-ref ref="consoleRanger"/>
    </logger>

    <logger name="org.janusgraph" additivity="false" level="warn">
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.springframework" additivity="false" level="warn">
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.eclipse" additivity="false" level="warn">
        <appender-ref ref="console"/>
    </logger>

    <logger name="com.sun.jersey" additivity="false" level="warn">
        <appender-ref ref="console"/>
    </logger>

    <!-- to avoid logs - The configuration log.flush.interval.messages = 1 was supplied but isn't a known config -->
    <logger name="org.apache.kafka.common.config.AbstractConfig" additivity="false" level="error">
        <appender-ref ref="console"/>
    </logger>

    <!-- Suppress OTel export errors when running locally without a collector -->
    <logger name="io.opentelemetry" additivity="false" level="OFF"/>

    <logger name="AUDIT" additivity="false" level="info">
        <appender-ref ref="consoleAudit"/>
    </logger>

    <logger name="LARGE_MESSAGES" additivity="false" level="warn">
        <appender-ref ref="console"/>
    </logger>

    <logger name="METRICS" additivity="false" level="debug">
        <appender-ref ref="consoleMetrics"/>
    </logger>

    <logger name="FAILED" additivity="false" level="info">
        <appender-ref ref="console"/>
    </logger>

    <logger name="TASKS" additivity="false" level="info">
        <appender-ref ref="consoleTasks"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>
</configuration>
