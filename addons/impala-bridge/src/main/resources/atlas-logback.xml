<configuration>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/var/log/hive/impala-bridge.log</file>
    <append>true</append>
    <encoder>
      <pattern>%date [%thread] %level{5} [%file:%line] %msg%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>/var/log/hive/impala-bridge-%d.log</fileNamePattern>
      <maxHistory>20</maxHistory>
      <cleanHistoryOnStart>true</cleanHistoryOnStart>
    </rollingPolicy>
  </appender>

  <logger name="org.apache.atlas.impala.ImpalaLineageTool" additivity="false" level="info">
    <appender-ref ref="FILE"/>
  </logger>

  <root level="warn">
    <appender-ref ref="FILE"/>
  </root>
</configuration>
